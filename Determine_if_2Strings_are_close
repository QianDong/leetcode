class Solution(object):
    def closeStrings(self, word1, word2):
        """
        :type word1: str
        :type word2: str
        :rtype: bool
        """
        if len(word1) != len(word2):
            return False
        if set(word1) != set(word2):
            return False
        word1dictionary = dict()
        word2dictionary = dict()
        for char in word1:
            word1dictionary[char] = word1.count(char)
        for char in word2:
            word2dictionary[char] = word2.count(char)
        if sorted(word1dictionary.values()) != sorted(word2dictionary.values()):
            return False
        else:
            return True

